{
  "scripts": {
    "start": "node dist",
    "build": "npm run build:server & npm run build:client",
    "build:server": "babel server --out-dir dist",
    "build:client": "webpack --config client/webpack.config.js",
    "dev": "npm run dev:server | npm run dev:client",
    "dev:server": "nodemon --exec babel-node server",
    "dev:client": "webpack-dev-server --config client/webpack.dev.config.js"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "postcss": {},
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "babel-loader": "^8.0.4",
    "css-loader": "^2.1.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "sass-loader": "^7.1.0",
    "vue": "^2.5.21",
    "vue-loader": "^15.4.2",
    "vue-template-compiler": "^2.5.21",
    "webpack": "^4.28.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.11",
    "webpack-merge": "^4.1.5"
  },
  "dependencies": {
    "express": "^4.16.4"
  }
}
