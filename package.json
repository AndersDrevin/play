{
  "scripts": {
    "start": "node dist",
    "build": "npm run build:server & npm run build:client",
    "build:server": "babel server --out-dir dist",
    "build:client": "webpack --config client/webpack.config.js",
    "dev": "npm run dev:server",
    "dev:server": "nodemon --exec babel-node server",
    "dev:client": "webpack-dev-server --config client/webpack.dev.config.js"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "nodemon": "^1.18.9",
    "webpack": "^4.28.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.11"
  },
  "dependencies": {
    "express": "^4.16.4"
  }
}
